@model RadarLiterario.Models.Usuario

@{
    ViewData["Title"] = "Recuperar Senha - ";
}

<h1>Alterar Senha</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Recovery">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Nome" />
            <input type="hidden" asp-for="Sobrenome" />
            <input type="hidden" asp-for="DataDeNascimento" />
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <small class="form-text text-muted">
                    Deve ter de 8 a 20 caracteres.
                </small>
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmarSenha" class="control-label"></label>
                <input asp-for="ConfirmarSenha" class="form-control" />
                <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-dark">
                    <i class="bi bi-clipboard2-check"></i> Salvar
                </button>
            </div>
        </form>
        <br />
    </div>
</div>

<div>
    Lembrou a senha? <a asp-controller="Usuarios" asp-action="Login">Acesse sua conta</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
